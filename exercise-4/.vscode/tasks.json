{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Client",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "mkdir -p ${workspaceFolder}/build && g++ ${workspaceFolder}/src/tcp_echo_client.cpp ${workspaceFolder}/src/tcp_echo_shared.cc -o ${workspaceFolder}/build/client"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$gcc"
      ]
    },
    {
      "label": "Build Server",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "mkdir -p ${workspaceFolder}/build && g++ ${workspaceFolder}/src/tcp_echo_server.cpp ${workspaceFolder}/src/tcp_echo_shared.cc -o ${workspaceFolder}/build/server"
      ],
      "group": "build",
      "problemMatcher": []
    }
  ]
}